<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiProject.ViewModels"
             xmlns:converters="clr-namespace:MauiProject.Converters"
             x:Class="MauiProject.MainPage"
             Title="Weather Today">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Padding="20">
        <StackLayout Spacing="20" VerticalOptions="Start">
            
            <Picker Title="Select a Country"
                    ItemsSource="{Binding Countries}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Margin="0,0,0,10" />

            <Picker Title="Select a City"
                    ItemsSource="{Binding Cities}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedCity, Mode=TwoWay}"
                    IsVisible="{Binding SelectedCountry, Converter={StaticResource NullToBooleanConverter}}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Margin="0,0,0,20"/>

            <StackLayout IsVisible="{Binding SelectedCity, Converter={StaticResource NullToBooleanConverter}}">
                <Frame BackgroundColor="LightSkyBlue" CornerRadius="20" Padding="20" Margin="0,20,0,0" HasShadow="True">
                    <StackLayout>
                        <Label Text="Today" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                        <Image Source="{Binding WeatherData.IconUrl}" WidthRequest="80" HeightRequest="80" HorizontalOptions="Center" Aspect="AspectFit" />
                        <Label Text="{Binding WeatherData.Temperature, StringFormat='{0}°C'}" FontSize="60" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                        <Label Text="{Binding WeatherData.WeatherCondition}" FontSize="20" HorizontalOptions="Center" TextColor="White"/>
                        <Label Text="{Binding WeatherData.WindSpeed, StringFormat='Wind: {0} km/h'}" FontSize="18" HorizontalOptions="Center" TextColor="White"/>
                    </StackLayout>
                </Frame>

                <StackLayout IsVisible="{Binding SelectedCity, Converter={StaticResource NullToBooleanConverter}}">
                    <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Text="DAILY FORECAST" FontSize="12" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,20,0,0" />
                        <CollectionView Grid.Row="1" ItemsSource="{Binding GroupedDailyForecasts}" ItemsLayout="VerticalList" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" MinimumWidthRequest="200" Margin="10">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Spacing="5" Padding="5" HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding Key}" FontSize="11" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,5,0,0" />
                                        <CollectionView ItemsSource="{Binding Items}" ItemsLayout="HorizontalList" HorizontalScrollBarVisibility="Never" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="100">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Frame BackgroundColor="White" Padding="8" Margin="2" CornerRadius="10" HeightRequest="90" WidthRequest="100">
                                                        <StackLayout Spacing="3">
                                                            <Label Text="{Binding Hour}" FontSize="12" HorizontalOptions="Center" TextColor="Black" />
                                                            <Label Text="{Binding Temperature, StringFormat='{0}°C'}" FontSize="14" HorizontalOptions="Center" TextColor="Black" />
                                                            <Label Text="{Binding WeatherCondition}" FontSize="12" HorizontalOptions="Center" TextColor="Black" HorizontalTextAlignment="Center" />
                                                        </StackLayout>
                                                    </Frame>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>